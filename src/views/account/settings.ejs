<% config.title = lang.views.account.settings.title; %>
<% config.sidebar.type = "account"; %>
<% config.sidebar.selected = "settings"; %>
<% config.scripts = ['account.js']; %>
    <main class="content-sidebar card">
        <div class="card-block row flex-card">
            <div class="col-lg-12">
                <h1>
                    <b><%- lang.views.account.settings.title %></b>
                </h1>
            </div>
            <div class="col-md-6 col-lg-4">
                <form id="profilpic" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="_csrf" value="<%- csrfToken %>">
                    <div class="col-lg-12 centered">
                        <img id="avatar" class="avatar rounded-2" src="/avatars/<%- account.idusers %>" width="128px">
                    </div>
                    <div class="form-group mt-3">
                        <input type="file" class="form-control-file" id="ppinput" name="ppinput" aria-describedby="fileHelp">
                        <small class="form-text text-muted"><%- lang.views.account.settings.maxPPWeight %></small>
                    </div>
                    <progress id="progress" value="0" max="100"></progress>
                    <button class="btn btn-harps">Valider</button>
                </form>
            </div>
            <div class="col-md-6 col-lg-8">
                <h3><%- lang.views.account.settings.basics %></h3>
                <form method="POST" action="/account/settings">
                    <input type="hidden" name="_csrf" value="<%- csrfToken %>">
                    
                    <label>
                        <%- lang.input.firstname %>
                    </label>
                    <div class="input-group">
                        <span class="input-group-addon" id="addon-firstname">
                            <i class="fa fa-user-o" aria-hidden="true"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Nouveau Prenom" name="firstname" aria-describedby="addon-firstname" value="<%- account.firstname %>">
                    </div>

                    <label>
                        <%- lang.input.lastname %>
                    </label>
                    <div class="input-group">
                        <span class="input-group-addon" id="addon-lastname">
                            <i class="fa fa-user-o" aria-hidden="true"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Nouveau Nom" name="lastname" aria-describedby="addon-lastname" value="<%- account.lastname %>">
                    </div>

                    <label>
                        <%- lang.input.birthdate %>
                    </label>
                    <div class="input-group">
                        <span class="input-group-addon" id="addon-birthday">
                            <i class="fa fa-birthday-cake" aria-hidden="true"></i>
                        </span>
                        <input type="date" class="form-control" aria-describedby="addon-birthday" name="birthdate" value="<%- account.birthdate %>">
                    </div>
                    
                    <label>
                        <%- lang.input.email %>
                    </label>
                    <div class="input-group">
                        <span class="input-group-addon" id="addon-email">
                            <i class="fa fa-envelope-o" aria-hidden="true"></i>
                        </span>
                        <input type="email" class="form-control" placeholder="Email" name="email" aria-describedby="addon-email" value="<%- account.email %>">
                    </div>
                    <br>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert" <%- (model.login.error !="" ? "" :
                        'style="display:none;"') %>>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <strong>
                            <%- model.login.error %>
                        </strong>
                    </div>
                    <button type="submit" class="btn btn-harps">
                        <%- lang.button.confirm %>
                    </button>
                </form>
            </div>
        </div>
    </main>
    <div class="modal fade" id="modal-ppinput" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>