{
  "name": "harpsproject",
  "version": "0.0.8",
  "description": "The Harps Project",
  "repository": {
    "type": "git",
    "url": "https://github.com/QuantumSheep/harpsproject.git"
  },
  "main": "dist/app",
  "types": "dist/app",
  "scripts": {
    "start": "node ./",
    "build": "npm run compile && npm run minify && npm run copyimg",
    "compile": "tsc && npx babel ./src/public/js/ --out-dir ./dist/public/js",
    "minify": "mkdirp ./dist/public/css && cleancss -O1 ./src/public/css/* --output ./dist/public/css/style.css",
    "copyimg": "copyfiles -f ./src/public/img/* ./dist/public/img/"
  },
  "author": "QuantumSheep",
  "license": "Apache-2.0",
  "babel": {
    "presets": [
      "env",
      "minify"
    ]
  },
  "dependencies": {
    "async": "^2.6.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "express-ejs-layouts": "^2.3.1",
    "express-mysql-session": "^1.2.3",
    "express-session": "^1.15.6",
    "helmet": "^3.9.0",
    "moment": "^2.20.1",
    "mysql": "^2.15.0",
    "socket.io": "^2.0.4",
    "typescript": "^2.6.2",
    "uuid": "^3.1.0",
    "validator": "^9.2.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.46",
    "@types/bcryptjs": "^2.4.1",
    "@types/body-parser": "^1.16.8",
    "@types/cookie-parser": "^1.4.1",
    "@types/csurf": "^1.9.35",
    "@types/express": "^4.11.0",
    "@types/express-session": "^1.15.6",
    "@types/helmet": "0.0.37",
    "@types/mysql": "^2.15.2",
    "@types/node": "^8.5.1",
    "@types/socket.io": "^1.4.31",
    "@types/uuid": "^3.4.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.2.0"
  }
}
